<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <corners android:bottomLeftRadius="400px"
                android:bottomRightRadius="400px" />
        </shape>
    </item>

    <!-- Create inner shadow (CSS: box-shadow: inset 0px -1px 65px rgba(0, 0, 0, 0.06);) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <corners android:bottomLeftRadius="400px"
                android:bottomRightRadius="400px" />
            <padding android:bottom="1px" />
            <size android:height="65px" />
            <gradient
                android:angle="180"
                android:endColor="#0F000000"
                android:startColor="#0F000000"
                android:type="linear" />
        </shape>
    </item>



</layer-list>

